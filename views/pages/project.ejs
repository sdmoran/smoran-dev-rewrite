<!DOCTYPE html>
<html>
    <head>
        <title>smoran.dev</title>
        <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <div class="flex flex-col items-center space-y-2 ">
            <div class="flex flex-col items-center my-12">
                <h1 class="text-header"><%= project.name %></h1>
                <% if(project.github && project.liveapp) { %>
                    <h3 class="text-primary"><a href="<%= project.github %>">GitHub</a> | <a href="<%= project.liveapp %>">Live App</a></h3>
                <% } else if (project.github) { %>
                    <h3 class="text-primary"><a href="<%= project.github %>">GitHub</a> | 
                <% } else if (project.liveapp) { %>
                    <h3><a href="<%= project.liveapp %>">Live App</a></h3>
                <% } %>
            </div>

            <div class="m-16 flex flex-col justify-items-start w-4/5 space-y-4">    
                <h2 class="text-header">Description</h2>
                <% project.paragraphs.forEach(function(paragraph, idx) { %>
                    <p class="py-1"><%= paragraph %></p>
                <% }) %>

                <h2 class="text-header">Technologies</h2>
                <p class="py-1"><%= project.technologies %></p>

                <h2 class="text-header">Images</h2>
                <!-- Render images -->
                <% project.images.forEach(function(img, idx) { %>
                    <img src="<%= img %>" class="rounded-md object-left object-contain max-h-80 w-full">
                <% }) %>
            </div>
        </div>
    </body>
</html>
